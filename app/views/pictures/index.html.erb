<h2>My Posts</h2>
<br>
<table class="PostTable">
  <tr>
    <th>Title</th>
    <th>User</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
    <td><%= picture.user.name %></td>
    <td><button type="button" class="btn"><%= link_to 'Show', picture_path(picture.id) %></button></td>
    <% if current_user.id == picture.user.id %>
    <td><button type="button" class="btn"><%= link_to "Edit", edit_picture_path(picture.id), data: { confirm: 'Are you sure to edit？' } %></button></td>
    <td><button type="button" class="btn5"><%= link_to 'Delete', picture_path(picture.id), method: :delete ,data: { confirm: 'Are you sure to delete？' } %></button></td>
    <% end %>
  </tr>
<% end %>
</table><br>
<button type="button" class="btn4"><%= link_to 'New Post', new_picture_path %></button>
