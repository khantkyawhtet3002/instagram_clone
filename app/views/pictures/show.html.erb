<h2>Post Details</h2>
<p class="font">title: <%= @picture.title %></p>
<p class="font">Content: <%= @picture.content %></p>
<p>
  <%= image_tag @picture.image.url if @picture.image? %>
</p>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Delete Favorite', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Create Favorite', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %><br>
<button type="button" class="btn"><%= link_to 'Posts List', pictures_path %></button>
